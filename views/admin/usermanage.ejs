
<%- include('../partials/adminHeader.ejs') %>

            <!-- Table Start -->

            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">User Status</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">mobile</th>
                                            <th scope="col">Email</th>
                                            <!-- <th scope="col">Country</th>
                                            <th scope="col">ZIP</th>
                                            <th scope="col">Status</th> -->
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i=0;i<userData.length;i++){ %>
                                        <tr>
                                            <th scope="row"><%=i+1%></th>
                                            <td><%= userData[i].name %></td>
                                            <td><%= userData[i].mobile %></td>
                                            <td><%= userData[i].email %></td>

                                            <%if(userData[i].isBlock==0){ %>
                                            <td><a href="/admin/blockUser?id=<%=userData[i]._id%>" class="btn btn-danger">block</a></td>
                                           <% }else{%>
                                            <td><a href="/admin/blockUser?id=<%=userData[i]._id%>&data=true" class="btn btn-success">unblock</a></td>
                                           <% }%>
                                            <!-- <td>123</td>
                                            <td>Member</td> -->
                                        </tr>
                                    <%}%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table End -->


 <%- include('../partials/adminFooter.ejs') %>