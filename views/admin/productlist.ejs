<%- include('../partials/adminHeader.ejs') %>

            <!-- Table Start -->

            <div class="container-fluid pt-4 px-4">
                <%if(prodactlist.length!==0){%>
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Product list</h6>
                           
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Rate</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">discount</th>
                                            <th scope="col">Constroll</th>
                                            <th scope="col">Edit</th>
                                            <th scope="col">Remove</th>
                                        </tr>
                                    </thead>
                                    <%let i=0%>
                                    <% prodactlist.forEach((items)=>{ %>
                                    <tbody>
                                      <%i++%>
                                        <tr>
                                            <th scope="row"><%=i%></th>
                                            <td><%=items.name%></td>
                                            <td><%=items.price%></td>
                                            <td><img src="/admin/productImage/<%=items.image[0]%>" alt="" style="width:2em;height: 2em;"></td>
                                            <td><%=items.catogary%></td>
                                            <td><%=items.quantity%></td>
                                            <td><%=items.discount%></td>
                                            <%if(items.status==true){%>
                                            <td><a href="/admin/stausProduct?id=<%=items._id%>&data=true"><button  class="btn-danger">STOCK OUT</button></a></td>
                                            <%}else{%>
                                            <td><a href="/admin/stausProduct?id=<%=items._id%>"><button class="btn-success">STOCK</button></a></td>
                                            <%}%>
                                            <td><a href="/admin/productEdit?name=<%=items.name%>&price=<%=items.price%>&image=<%=items.image%>&catogary=<%=items.catogary%>&quantity=<%=items.quantity%>&discrip=<%=items.discription%>&id=<%=items._id%>&discount=<%=items.discount%>"
                                                ><img src="/admin/img/edit.png" alt="" class="imge"></a></td>
                                            <td><a href="/admin/deleteProduct?id=<%=items._id%>"  style="color: red; position: relative;left:1.5em;top: 1em;" class="trash"  onclick="return confirm('Are you sure you want to delete this product?')"><i class="bi bi-trash"></a></td> 
                                        </tr>
                                  
                                    </tbody>
                                    <%})%>
                                </table>
                            <%}else{%>
                                <h6 style="position: absolute;left: 40%;"><%=message%></h6>
                           
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
            </div>
            <!-- Table End -->


 <%- include('../partials/adminFooter.ejs') %>