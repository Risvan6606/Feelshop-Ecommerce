<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OTP Verification Form</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <h2 class="text-center mb-4">OTP Verification</h2>


        <form action="" method="post">
          
          <div class="form-group">
            <label for="otp">OTP</label>
            <div class="input-group">
              <input type="text" class="form-control" name="otp" id="otp" placeholder="Enter OTP">
              <div class="input-group-append">
                <!-- <button class="btn btn-secondary" type="button" id="generateOTP" hidden="true"><a href="/otpresend">here</a></button> -->
              </div>
            </div>
            <p id="countdownTimer">OTP will be expire in <span id="countdown">30</span></p>
          </div>
          <%if(typeof message!=='undefined'){%>
            <p style="color: red;" id="demo"><%=message%></p>
            <%}%>
          <input type="submit" class="btn btn-primary btn-block"  value="Verify">
         
        </form>
      </div>
    </div>
  </div>
  <script>
   function startTimer(duration, display) {
    var timer = duration, minutes, seconds;
    setInterval(function () {
        minutes = parseInt(timer / 60, 10)
        seconds = parseInt(timer % 60, 10);

        minutes = minutes < 10 ? "0" + minutes : minutes;
        seconds = seconds < 10 ? "0" + seconds : seconds;

        display.textContent = minutes + ":" + seconds;

        if (--timer < 0) {
            timer = duration;
        }
    }, 1000);
}


    var countdown=document.getElementById('countdown');
    var countdownTimer=document.getElementById('countdownTimer')
    startTimer(30,countdown)
    function  countdownExpired(){
      countdownTimer.innerHTML='OTP has expired .Resend the otp <a href="/otpresend">CLICK</a> '
    }
    setTimeout(countdownExpired,30000);


  function hide(){
    document.getElementById('demo').innerHTML=''
  }
  document.getElementById('otp').addEventListener('click',hide);
  </script>
  <!-- Bootstrap JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.min.js" integrity="sha512-QhZz2fX3q/zwulOdwvSar0ORJh+1UMjgeifwCsp4Z4JzZhrX9n+3LgFvS/XGn1yJ04pGmlRpjr+Z5HJZfW5ZMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>