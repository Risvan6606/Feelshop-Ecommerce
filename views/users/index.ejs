<%- include('../partials/header1.ejs') %>
         <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <%
              if(banner.length==1){
               %>
               <div class="carousel-item active">
                  <img class="d-block w-100" style="height: 900px;" src="" alt="First slide">
                </div>
               <%
              }else{
               %>
               <div class="carousel-item active">
                  <img class="d-block w-100" style="height: 900px;" src="/user/images/7TWP_blog.png" alt="">
                  <div class="carousel-caption d-none d-md-block" style="position: absolute;top: 300px;">
                     <h1 style="color: white; text-shadow: 2px 2px 8px #FF0000;">WELCOME TO FEEL SHOP </h1>
                     <h3 style="color: white;  text-shadow: 2px 2px 8px #FF0000;">BUY PRODUCTS AND GET MORE COUPONS THIS SHOP CHANGE YOUR MIND</h3>
                   </div>
                </div>
               <%for(i=0;i<banner.length;i++){%>
                <%if(banner[i].status==true){%>
                  <div class="carousel-item">
                     <img class="d-block w-100" style="height: 900px;" src="/admin/productImage/<%=banner[i].image%>" alt="Second slide">
                     <div class="carousel-caption d-none d-md-block" style="position: absolute;top: 300px;">
                        <h1 style="color: rgb(255, 255, 255); text-shadow: 2px 2px 8px #FF0000"><%=banner[i].heading%></h1>
                        <h3 style="color: rgb(255, 255, 255);  text-shadow: 2px 2px 8px #FF0000"><%=banner[i].description%></h3>
                      </div>
                   </div>
                <%}%>
               <%}
              }
              %>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
      </div>
   <%- include('../partials/footer1.ejs') %>
   