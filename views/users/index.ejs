<%- include('../partials/header1.ejs') %>
      <!--------------------------- displayed banners ---------------------------------------->
<% if (banner.length> 0) { %>
  <div id="myCarousel" class="carousel slide" data-ride="carousel" >
      <!-- Carousel items -->
      <div class="carousel-inner">
          <% for (let i=0; i < banner.length; i++) { %>
              
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                  <img src="/admin/productImage/<%=banner[i].image%>" alt="Slide <%= i + 1 %>" class="img-responsive">
                  <div class="carousel-caption d-none d-md-block"  style="position: absolute;top: 300px;">
                      <h1 style="color: white; text-shadow: 2px 2px 8px #FF0000; ">
                          <%= banner[i].heading %>
                      </h1>
                      <h3 style="color: white; text-shadow: 2px 2px 8px #FF0000;">
                          <%= banner[i].description %>
                      </h3>
                  </div>
              </div>

          <% } %>
      </div>
      <!-- Navigation arrows -->
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
  </div>
<% } %>

<style>
  /* Set image width for different screen sizes */
  @media (max-width: 1400px) {
    .carousel-item img {
      width: 100%;
      height: 700px;
    }
    h1{
      width: auto;
    }
  }
  @media (max-width: 900px) {
    .carousel-item img {
      width: 100%;
      height: 500px;
    }

  }
  @media (max-width: 600px) {
    .carousel-item img {
      width: 100%;
      height: 300px;
    }
  }
</style>

