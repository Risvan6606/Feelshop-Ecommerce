   <script>
      function addToCart(id,productPDiscount) {
         console.log(id)
         $.ajax({
            url: '/addtoCart',
            method: 'post',
            data: {
               id: id,
               productPDiscount:productPDiscount
            },
            success: (response) => {
               if (response.success) {
                  console.log("testrs");
                  swal.fire({
                     position: 'center',
                     icon: 'success',
                     title: 'product added to cart',
                     showConfirmButton: false,
                     timer: 1500
                  })
               }
            }

         })
      }

      function addtoWishlist(id) {
         console.log(id)
         $.ajax({
            url: '/addtowhishlist',
            method: 'post',
            data: {
               id: id
            },
            success: (response) => {
               if (response.status) {
                  Swal.fire({
                     icon: 'success',
                     title: 'product added to wishlist',
                     showConfirmButton: false,
                     timer: 1000,

                  })

               } else if (response.productExit) {
                  Swal.fire({
                     icon: 'error',
                     title: 'Oops...',
                     text: 'Product already added to wishlist',
                     showConfirmButton: false,
                     timer: 1000

                  })

               }
               else {
                  Swal.fire({
                     icon: 'error',
                     title: 'Oops...',
                     text: 'Plz SignIn!',
                     showConfirmButton: false,
                     timer: 1000
                  })

               }
            }

         })
      }
